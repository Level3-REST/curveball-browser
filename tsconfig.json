{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "esModuleInterop": false,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,

        "resolveJsonModule": true,

        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/types/*"
            ]
        },
        "lib": [
          "ES2020",
          "DOM"
        ],
        "declaration": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ]
}
